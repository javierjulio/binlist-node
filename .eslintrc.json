{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "rules": {
    "eqeqeq": ["error"],
    "no-console": ["off"],
    "no-undef": ["off"],
    "no-unused-vars": ["warn", { "vars": "all", "args": "none", "ignoreRestSiblings": true }]
  },
  "ignorePatterns": ["/dist", "/node_modules", "/coverage"]
}
